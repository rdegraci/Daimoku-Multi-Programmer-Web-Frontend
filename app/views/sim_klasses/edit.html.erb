<h1>Editing sim_klass</h1>

<% form_for([@user, @sim_klass]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :source %><br />
    <%= f.text_area :source %>
  </p>
  <p>
    <%= f.label :importscript %><br />
    <%= f.text_area :importscript %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', user_sim_klass_path(@user, @sim_klass) %> |
<%= link_to 'Back', user_sim_klasses_path(@user) %>